<!--pages/upload-qrcode/upload-qrcode.wxml-->
<view class="container">
  <view class="card">
    <view class="tips">
      <text>请上传您的二维码图片，用于结算时识别</text>
    </view>

    <!-- 二维码预览 -->
    <view class="qrcode-preview">
      <image
        wx:if="{{qrcodeUrl}}"
        class="qrcode-image"
        src="{{qrcodeUrl}}"
        mode="aspectFit"
      />
      <view wx:else class="qrcode-placeholder">
        <text class="placeholder-icon">📷</text>
        <text class="placeholder-text">点击上传二维码</text>
      </view>
    </view>

    <!-- 上传按钮 -->
    <view class="button-group">
      <view class="upload-btn" bindtap="chooseImage">
        {{qrcodeUrl ? '重新上传' : '选择图片'}}
      </view>

      <view wx:if="{{qrcodeUrl}}" class="save-btn" bindtap="saveQrcode">
        保存
      </view>
    </view>
  </view>
</view>
