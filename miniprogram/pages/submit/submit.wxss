/* pages/submit/submit.wxss */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 40rpx 30rpx;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #5c4033;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8b7355;
}

.form-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.required {
  color: #ff4d4f;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background: #fff;
  border-color: #c77a4d;
}

.link-item {
  background: #f7f8fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.link-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.link-number {
  font-size: 26rpx;
  font-weight: bold;
  color: #c77a4d;
}

.delete-icon {
  width: 44rpx;
  height: 44rpx;
  line-height: 40rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  font-size: 36rpx;
  font-weight: bold;
}

.link-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: 2rpx solid #e8e8e8;
}

.add-link-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: #f5ebe0;
  border-radius: 12rpx;
  color: #8b7355;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.add-text {
  font-weight: 500;
}

.limit-tips {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #d4986a 0%, #c77a4d 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(199, 122, 77, 0.2);
}

.submit-button::after {
  border: none;
}
