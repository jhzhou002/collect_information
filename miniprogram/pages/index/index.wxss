/* pages/index/index.wxss */
page {
  background-color: #f5f5f5;
  overflow-x: hidden;
  width: 100%;
  max-width: 100vw;
  position: relative;
}

.container {
  min-height: 100vh;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  position: relative;
  box-sizing: border-box;
}

/* 轮播图样式 */
.swiper-container {
  width: 100%;
  max-width: 100vw;
  padding: 20rpx 30rpx 0;
  box-sizing: border-box;
}

.swiper {
  width: 100%;
  max-width: calc(100vw - 60rpx);
  height: 380rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 通知条样式 */
.notice-bar {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #fff4e6 0%, #ffe8cc 100%);
  margin: 20rpx 30rpx 0;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  overflow: hidden;
  width: calc(100% - 60rpx);
  max-width: calc(100vw - 60rpx);
  box-sizing: border-box;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-content {
  flex: 1;
  overflow: hidden;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
}

.notice-text {
  white-space: nowrap;
  font-size: 26rpx;
  color: #8b7355;
  position: absolute;
  left: 0;
  top: 0;
}

/* 内容区域 */
.content {
  padding: 30rpx;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  padding: 40rpx 0;
}

.welcome-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 登记按钮 */
.register-button {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #d4986a 0%, #c77a4d 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(199, 122, 77, 0.2);
}

.button-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.button-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.button-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.button-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.button-arrow {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

/* 说明区域 */
.tips-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.tips-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
  word-wrap: break-word;
  word-break: break-all;
}

/* 富文本内容中的图片 */
.tips-content image {
  max-width: 100% !important;
  height: auto !important;
  display: block;
}

/* 富文本内容中的表格 */
.tips-content table {
  max-width: 100%;
  overflow-x: auto;
  display: block;
}
