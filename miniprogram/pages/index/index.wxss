/* pages/index/index.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
}

/* 轮播图样式 */
.swiper-container {
  width: 100%;
  height: 400rpx;
  background: #f8f9fa;
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 内容区域 */
.content {
  padding: 30rpx;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  padding: 40rpx 0;
}

.welcome-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 登记按钮 */
.register-button {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #d4986a 0%, #c77a4d 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(199, 122, 77, 0.2);
}

.button-icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.button-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.button-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.button-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.button-arrow {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

/* 说明区域 */
.tips-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}

.tips-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}
