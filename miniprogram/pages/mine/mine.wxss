/* pages/mine/mine.wxss */
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
}

/* 顶部背景 */
.header-bg {
  background: linear-gradient(135deg, #d4986a 0%, #c77a4d 100%);
  padding: 40rpx 30rpx 100rpx;
}

.header-content {
  position: relative;
}

/* 用户卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.login-tips {
  font-size: 24rpx;
  color: #999;
}

.user-status {
  font-size: 24rpx;
  color: #52c41a;
}

.login-arrow {
  font-size: 48rpx;
  color: #c77a4d;
  font-weight: bold;
}

/* 登录视图 */
.login-view {
  cursor: pointer;
}

/* 功能菜单 */
.menu-section {
  padding: 0 30rpx;
  margin-top: -60rpx;
}

.menu-group {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.menu-badge {
  font-size: 24rpx;
  color: #ff4d4f;
  background: #fff1f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
}

.logout-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  color: #ff4d4f;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: 2rpx solid #ff4d4f;
}

.logout-button::after {
  border: none;
}

/* 完善资料弹窗 */
.profile-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-skip {
  font-size: 28rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
}

.form-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 头像选择 */
.avatar-options {
  display: flex;
  gap: 30rpx;
}

.avatar-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.avatar-option.active {
  background: #fff4e6;
  border-color: #c77a4d;
}

.avatar-option::after {
  border: none;
}

.option-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 16rpx;
}

.option-label {
  font-size: 26rpx;
  color: #666;
}

.avatar-option.active .option-label {
  color: #c77a4d;
  font-weight: bold;
}

/* 昵称输入 */
.nickname-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #333;
}

.input-tips {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.modal-footer {
  padding: 20rpx 30rpx 40rpx;
}

.complete-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #d4986a 0%, #c77a4d 100%);
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.complete-btn::after {
  border: none;
}
